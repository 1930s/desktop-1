{
  "name": "standard-notes",
  "main": "./app/dist/index.js",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "electron": "1.7.9",
    "electron-builder": "^19.45.0"
  },
  "build": {
    "appId": "org.standardnotes.standardnotes",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "category": "Office",
      "icon": "build/icon/",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "scripts": {
    "pack": "build --dir",
    "dist": "electron-builder -mwl --x64 --ia32",
    "dist-win": "electron-builder -w --x64 --ia32",
    "mac": "build -m",
    "release": "electron-builder -mwl --x64 --ia32",
    "build-linux": "electron-builder -l --x64 --ia32",
    "build-beta": "electron-builder -mwl --x64 --ia32 --publish=always --em.productName='Standard Notes (Beta)' --em.appId=org.standardnotes.standardnotes.beta",
    "distwin": "build -w --x64 --ia32",
    "distmac": "build -m",
    "postinstall": "electron-builder install-app-deps",

    "build": "rimraf dist/ && babel ./app --out-dir app/dist/ --ignore ./app/compiled,./app/assets,./app/stylesheets,./app/dist,./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "start": "npm run build && electron . --enable-logging --icon _icon/icon.png"
  }
}
